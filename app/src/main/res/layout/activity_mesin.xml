<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#CE7F0B"
    tools:context=".TIActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EB6506"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/gambar"
            android:layout_width="132dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/mesin"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="#0B0A0A"
            android:backgroundTint="#03AAE3"
            android:text="Teknik Mesin"
            android:textAlignment="center"
            android:textColor="#EFE6E6"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="Deskripsi dan Profile"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Politeknik Negeri Padang (PNP) memiliki program studi Diploma 3 Teknik Mesin. Sejarah PNP dan jurusan-jurusan di dalamnya adalah sebagai berikut:    PNP didirikan pada tahun 1985 berdasarkan Surat Keputusan Dirjen Dikti No. 80/Dikti/Kep/1985.    Pada awalnya, PNP bernama Politeknik Engineering Universitas Andalas dan memiliki empat jurusan, yaitu teknik mesin, teknik sipil, teknik listrik, dan teknik telekomunikasi.    Pada tahun 1989, jurusan telekomunikasi dipisahkan menjadi jurusan telekomunikasi dan jurusan elektronika.    Pada tahun 1992, jurusan listrik, telekomunikasi, dan elektronika digabungkan menjadi satu jurusan teknik elektro dengan tiga program studi.    PNP saat ini memiliki 7 jurusan dan 33 program studi, termasuk Diploma 3.    PNP berlokasi di tempat yang sama dengan Universitas Andalas Padang."
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#EA6506"
            android:text="BACK" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>