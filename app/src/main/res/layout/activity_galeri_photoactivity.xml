<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GaleriPhotoactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EB6506"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/gambar"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:text="Galeri Photo"
            android:textColor="#EFE6E6"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="95dp">

        <ImageView
            android:id="@+id/gambar1"
            android:layout_width="182dp"
            android:layout_height="212dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/info"/>

        <ImageView
            android:id="@+id/gambar2"
            android:layout_width="238dp"
            android:layout_height="197dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/info2"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="310dp">

        <ImageView
            android:id="@+id/gambar3"
            android:layout_width="162dp"
            android:layout_height="137dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo"/>

        <ImageView
            android:id="@+id/gambar4"
            android:layout_width="236dp"
            android:layout_height="203dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/info3"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="500dp">

        <ImageView
            android:id="@+id/gambar5"
            android:layout_width="192dp"
            android:layout_height="245dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/info4"/>

        <ImageView
            android:id="@+id/gambar6"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>